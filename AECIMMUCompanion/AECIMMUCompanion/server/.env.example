# AECI MMU Companion Server Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (Change this in production!)
JWT_SECRET=aeci-mmu-companion-secret-key-2025-change-in-production

# Database Configuration
DB_PATH=./aeci_mmu.db

# Email Configuration (Configure with your SMTP provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Settings
SESSION_TIMEOUT=24h
REFRESH_TOKEN_TIMEOUT=7d
PASSWORD_RESET_TIMEOUT=24h

# Security Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://10.0.2.2:3000
